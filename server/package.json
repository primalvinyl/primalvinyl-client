{
    "name": "primalvinyl-server",
    "version": "0.1.0",
    "private": true,
    "mode": "development",
    "scripts": {
        "build": "webpack --mode production",
        "dev:webpack": "webpack --watch",
        "dev:server": "nodemon ./server.js",
        "dev:remoteapi": "nodemon dev-remote-api/server.js db.json",
        "dev": "concurrently \"npm run dev:webpack\" \"npm run dev:server\" \"npm run dev:remoteapi\"",
        "start": "node ./server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:clear": "jest --clearCache"
    },
    "dependencies": {
        "@babel/cli": "^7.11.6",
        "@babel/core": "^7.11.6",
        "@babel/preset-env": "^7.11.5",
        "babel-jest": "^26.3.0",
        "babel-loader": "^8.1.0",
        "concurrently": "^5.3.0",
        "cookie-parser": "~1.4.4",
        "cors": "^2.8.5",
        "debug": "~2.6.9",
        "dotenv": "^8.2.0",
        "express": "~4.16.1",
        "http-errors": "~1.6.3",
        "jest": "^26.4.2",
        "json-server": "^0.16.2",
        "mongodb": "^3.5.9",
        "morgan": "~1.9.1",
        "node-fetch": "^2.6.1",
        "nodemailer": "^6.4.8",
        "nodemon": "^2.0.3",
        "saslprep": "^1.0.3",
        "url-join": "^4.0.1",
        "webpack": "^4.44.2",
        "webpack-cli": "^3.3.12"
    }
}
